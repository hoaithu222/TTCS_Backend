# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000
# Optional: allow additional CORS origins (e.g., two different front-end ports)
CORS_ORIGIN_1=http://localhost:5173
CORS_ORIGIN_2=http://localhost:5174

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mylove_db
DB_USER=postgres
DB_PASSWORD=your_password

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mylove

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=mylove

# Wallet Deposit Configuration
USE_VNPAY_QR=true
BANK_NAME=MBBank
BANK_ACCOUNT_NUMBER=0368891724
BANK_ACCOUNT_HOLDER=NGUYEN VAN A

# VNPay Configuration (for wallet deposit QR code)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# Client App URL (for return URLs)
# IMPORTANT: For VNPay, this MUST be a public URL (not localhost)
# Use ngrok for local development: https://ngrok.com/
# Example: CLIENT_APP_URL=https://abc123.ngrok.io
CLIENT_APP_URL=http://localhost:5174

# VNPay IPN URL (configure this in VNPay Sandbox dashboard)
# IPN URL: http://your-backend-url:3000/api/wallets/webhook-receiver
# Example: http://103.124.92.168:3000/api/wallets/webhook-receiver 

# AI Provider Configuration
# Note: Gemini will be used if GEMINI_API_KEY is set, otherwise OpenAI will be used
# If neither is set, the system will use fallback rule-based generation

# Google Gemini (Priority 1 - used if set)
# Available models (will auto-fallback if model not found):
# - gemini-2.5-flash (newest, recommended)
# - gemini-1.5-flash-latest
# - gemini-1.5-flash-001
# - gemini-1.5-flash
# - gemini-1.5-pro-latest
# - gemini-1.5-pro
# - gemini-pro (stable, older model)
# Run: npm run check:gemini to test which models work with your API key
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.8

# OpenAI (Priority 2 - used if Gemini is not set)
OPENAI_API_KEY=your_openai_api_key
OPENAI_PRODUCT_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.8